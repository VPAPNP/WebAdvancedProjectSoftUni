<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EShopWebApp</title>
    <link rel="icon" type="image/x-icon" href="/online-shopping.png">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/uploadImage.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/EShopWebApp.styles.css" asp-append-version="true" />
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
   
    
    <script src="https://apis.google.com/js/platform.js" async defer></script>
   
</head>
<body>
    <header>
       

        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="Admin" asp-controller="Home" asp-action="Index"><img style="height:50px; width:50px" src="/ShopIcon.svg" alt="My Happy SVG" /> EShopWebApp</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                             <li class="nav-item">
                                 <a class="nav-link text-dark" asp-area="Admin" asp-controller="Home" asp-action="Index">Home</a>
                             </li>
                    
                        <li class="dropdown">
                            <button class="btn dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Products
                            </button>
                            <ul class="dropdown-menu">
                                <li><a class="nav-link text-dark dropdown-item" asp-area="Admin" asp-controller="Product" asp-action="Create">Create</a></li>
                                <li><a class="nav-link text-dark dropdown-item" asp-area="Admin" asp-controller="Product" asp-action="All">View All</a></li>
                                
                            </ul>
                        </li>
                        <li class="dropdown">
                            <button class="btn dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Categories
                            </button>
                            <ul class="dropdown-menu">
                                <li><a class="nav-link text-dark dropdown-item" asp-area="Admin" asp-controller="Category" asp-action="Create">Create</a></li>
                                <li><a class="nav-link text-dark dropdown-item" asp-area="Admin" asp-controller="Category" asp-action="All">View All</a></li>
                                
                            </ul>
                        </li>
                        <li class="dropdown">
                            <button class="btn dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Brands
                            </button>
                            <ul class="dropdown-menu">
                                <li><a class="nav-link text-dark dropdown-item" asp-area="Admin" asp-controller="Brand" asp-action="Create">Create</a></li>
                                <li><a class="nav-link text-dark dropdown-item" asp-area="Admin" asp-controller="Brand" asp-action="All">View All</a></li>
                                
                            </ul>
                        </li>
                    </ul>
                    <partial name="_LoginPartial"/>
                    
                </div>
            </div>
        </nav>
        <aside>
            <div class="container">
                <div class="row">
                    <div class="col-12">
                        <div class="alert alert-info alert-dismissible fade show" role="alert">
                            <strong>Welcome!</strong> This is the admin area of the EShopWebApp. Here you can manage the products, categories and brands.
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    </div>
                </div>
            </div>
        </aside>
        
    </header>
    
    <div class="container">
        <main role="main" class="pb-3">
            

            @RenderBody()
            
        </main>
    </div>

    <footer class="text-center text-white fixed-bottom" style="background-color: #BDBDBD">
        <div class="container">
            @if (DateTime.Now.Year > 2024)
            {
                <text>&copy; 2024 - @DateTime.Now.Year - EShopWebApp - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a></text>
            }
            else
            {
                <text>&copy; @DateTime.Now.Year - EShopWebApp - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a></text>

            }
        </div>
    </footer>
    
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/uploadImage.js" asp-append-version="true"></script>
    <script src="~/js/jquery-override.js"></script>
    
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
