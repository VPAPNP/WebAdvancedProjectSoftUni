@model PackageViewModel

@{
    ViewData["Title"] = "Create";
}

<h2 class="text-center">@ViewBag.Title</h2>

<h4>Package</h4>
<hr />

<div class="row">
    <form method="post" asp-action="Create" asp-controller="Package">
        <div class="form-group">
            <div class="mb-3">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" placeholder="Write your category name here...">
                <span asp-validation-for="Name" class="small text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Description"></label>
                <input asp-for="Description" class="form-control" placeholder="Write your category name here...">
                <span asp-validation-for="Description" class="small text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Weight"></label>
                <input asp-for="Weight" class="form-control" placeholder="Write your category name here...">
                <span asp-validation-for="Weight" class="small text-danger"></span>
            </div>
           
        </div>
        <input class="btn btn-primary mt-3" type="submit" value="Create" />
        <input type="hidden" id="returnUrl1" name="returnUrl1" />


    </form>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
        
    }
}
<script>
    // Capture the current URL and set it as the value of the hidden input
    document.getElementById('returnUrl1').value = window.location.href;
</script>


