@model AllProductsQueryModel

@{
    ViewBag.Title = "All Products";
}
<partial name="_BreadcrumbPartial" view-data="ViewData" />
<!-- products -->
<div class="product-section mt-150 mb-150">
    <div class="container">

        <div class="row">
            <div class="col-md-12">
                <div class="product-filters">
                    <ul>
                        <li class="active" data-filter="*">All</li>
                        <li data-filter=".strawberry">Strawberry</li>
                        <li data-filter=".berry">Berry</li>
                        <li data-filter=".lemon">Lemon</li>
                    </ul>
                </div>
            </div>
        </div>
        @{
            var maxPage = (int)Math.Ceiling((double)Model.TotalProducts / Model.PageSize);
            var previousPage = Model.CurrentPage - 1;
            if (previousPage < 1)
            {
                previousPage = 1;
            }
            var nextPage = Model.CurrentPage + 1;
            if (nextPage > maxPage)
            {
                nextPage = maxPage;
            }
        }
        <div class="row mb-5">
            <div class="col-lg-12 text-center">
                <div class="pagination-wrap">
                    <ul>
                        <!-- Previous Page Link -->
                        <li>
                            <a class="@(Model.CurrentPage == 1 ? "disabled" : string.Empty)"
                               asp-controller="Product"
                               asp-action="All"
                               asp-route-currentPage="@previousPage"
                               asp-route-category="@Model.Category"
                               asp-route-searchTerm="@Model.SearchTerm"
                               asp-route-productsorting="@((int)@Model.ProductSorting)">
                                Prev
                            </a>
                        </li>

                        <!-- First Page Link -->
                        @if (Model.CurrentPage > 3)
                        {
                            <li>
                                <a class="@(Model.CurrentPage == 1 ? "active" : string.Empty)"
                                   asp-controller="Product"
                                   asp-action="All"
                                   asp-route-currentPage="1"
                                   asp-route-category="@Model.Category"
                                   asp-route-searchTerm="@Model.SearchTerm"
                                   asp-route-productsorting="@((int)@Model.ProductSorting)">
                                    1
                                </a>
                            </li>
                            <li><span>...</span></li>
                        }

                        <!-- Previous page number if applicable -->
                        @if (Model.CurrentPage > 2)
                        {
                            <li>
                                <a asp-controller="Product"
                                   asp-action="All"
                                   asp-route-currentPage="@(Model.CurrentPage - 1)"
                                   asp-route-category="@Model.Category"
                                   asp-route-searchTerm="@Model.SearchTerm"
                                   asp-route-productsorting="@((int)@Model.ProductSorting)">
                                    @(Model.CurrentPage - 1)
                                </a>
                            </li>
                        }

                        <!-- Current Page -->
                        <li>
                            <a class="active">
                                @Model.CurrentPage
                            </a>
                        </li>

                        <!-- Next page number if applicable -->
                        @if (Model.CurrentPage < maxPage - 1)
                        {
                            <li>
                                <a asp-controller="Product"
                                   asp-action="All"
                                   asp-route-currentPage="@(Model.CurrentPage + 1)"
                                   asp-route-category="@Model.Category"
                                   asp-route-searchTerm="@Model.SearchTerm"
                                   asp-route-productsorting="@((int)@Model.ProductSorting)">
                                    @(Model.CurrentPage + 1)
                                </a>
                            </li>
                        }

                        <!-- Ellipsis after the current page -->
                        @if (Model.CurrentPage < maxPage - 2)
                        {
                            <li><span>...</span></li>
                        }

                        <!-- Last Page Link -->
                        @if (maxPage > 1 && Model.CurrentPage < maxPage - 2)
                        {
                            <li>
                                <a class="@(Model.CurrentPage == maxPage ? "active" : string.Empty)"
                                   asp-controller="Product"
                                   asp-action="All"
                                   asp-route-currentPage="@maxPage"
                                   asp-route-category="@Model.Category"
                                   asp-route-searchTerm="@Model.SearchTerm"
                                   asp-route-productsorting="@((int)@Model.ProductSorting)">
                                    @maxPage
                                </a>
                            </li>
                        }

                        <!-- Next Page Link -->
                        <li>
                            <a class="@(Model.CurrentPage == maxPage ? "disabled" : string.Empty)"
                               asp-controller="Product"
                               asp-action="All"
                               asp-route-currentPage="@nextPage"
                               asp-route-category="@Model.Category"
                               asp-route-searchTerm="@Model.SearchTerm"
                               asp-route-productsorting="@((int)@Model.ProductSorting)">
                                Next
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>

        <div class="row product-lists">
            @foreach (var product in Model.Products)
            {
                <partial name="_ProductPartial" model="@product" />
            }
        </div>
      
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="pagination-wrap">
                    <ul>
                        <!-- Previous Page Link -->
                        <li>
                            <a class="@(Model.CurrentPage == 1 ? "disabled" : string.Empty)"
                               asp-controller="Product"
                               asp-action="All"
                               asp-route-currentPage="@previousPage"
                               asp-route-category="@Model.Category"
                               asp-route-searchTerm="@Model.SearchTerm"
                               asp-route-productsorting="@((int)@Model.ProductSorting)">
                                Prev
                            </a>
                        </li>

                        <!-- First Page Link -->
                        @if (Model.CurrentPage > 3)
                        {
                            <li>
                                <a class="@(Model.CurrentPage == 1 ? "active" : string.Empty)"
                                   asp-controller="Product"
                                   asp-action="All"
                                   asp-route-currentPage="1"
                                   asp-route-category="@Model.Category"
                                   asp-route-searchTerm="@Model.SearchTerm"
                                   asp-route-productsorting="@((int)@Model.ProductSorting)">
                                    1
                                </a>
                            </li>
                            <li><span>...</span></li>
                        }

                        <!-- Previous page number if applicable -->
                        @if (Model.CurrentPage > 2)
                        {
                            <li>
                                <a asp-controller="Product"
                                   asp-action="All"
                                   asp-route-currentPage="@(Model.CurrentPage - 1)"
                                   asp-route-category="@Model.Category"
                                   asp-route-searchTerm="@Model.SearchTerm"
                                   asp-route-productsorting="@((int)@Model.ProductSorting)">
                                    @(Model.CurrentPage - 1)
                                </a>
                            </li>
                        }

                        <!-- Current Page -->
                        <li>
                            <a class="active">
                                @Model.CurrentPage
                            </a>
                        </li>

                        <!-- Next page number if applicable -->
                        @if (Model.CurrentPage < maxPage - 1)
                        {
                            <li>
                                <a asp-controller="Product"
                                   asp-action="All"
                                   asp-route-currentPage="@(Model.CurrentPage + 1)"
                                   asp-route-category="@Model.Category"
                                   asp-route-searchTerm="@Model.SearchTerm"
                                   asp-route-productsorting="@((int)@Model.ProductSorting)">
                                    @(Model.CurrentPage + 1)
                                </a>
                            </li>
                        }

                        <!-- Ellipsis after the current page -->
                        @if (Model.CurrentPage < maxPage - 2)
                        {
                            <li><span>...</span></li>
                        }

                        <!-- Last Page Link -->
                        @if (maxPage > 1 && Model.CurrentPage < maxPage - 2)
                        {
                            <li>
                                <a class="@(Model.CurrentPage == maxPage ? "active" : string.Empty)"
                                   asp-controller="Product"
                                   asp-action="All"
                                   asp-route-currentPage="@maxPage"
                                   asp-route-category="@Model.Category"
                                   asp-route-searchTerm="@Model.SearchTerm"
                                   asp-route-productsorting="@((int)@Model.ProductSorting)">
                                    @maxPage
                                </a>
                            </li>
                        }

                        <!-- Next Page Link -->
                        <li>
                            <a class="@(Model.CurrentPage == maxPage ? "disabled" : string.Empty)"
                               asp-controller="Product"
                               asp-action="All"
                               asp-route-currentPage="@nextPage"
                               asp-route-category="@Model.Category"
                               asp-route-searchTerm="@Model.SearchTerm"
                               asp-route-productsorting="@((int)@Model.ProductSorting)">
                                Next
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
<style>
    .pagination-wrap .disabled {
        pointer-events: none;
        color: #ddd; /* or any color to indicate disabled state */
    }
    .pagination-wrap .active {
        font-weight: bold;
        color: #000; /* or any color to indicate the active state */
    }
    .pagination-wrap span {
        color: #000; /* or any color to indicate ellipses */
    }
</style>